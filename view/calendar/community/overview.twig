{% do headTitle().append(translate("txt-calendar")) %}
{% do headTitle().append(translate("txt-community-calendar")) %}
<h1 class="display-4">{{ translate("txt-community-calendar") }}</h1>

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    {% for whichValue in whichValues if whichValue != constant("Calendar\\Service\\CalendarService::WHICH_UPDATED") %}
        <li class="nav-item {% if (which == whichValue) %}active{% endif %}">

            {% set classes = ['nav-link'] %}
            {% if (which == whichValue) %}
                {% set classes = classes|merge(['active']) %}
            {% endif %}

            {{ calendarLink(null,'overview', 'text-which-tab', whichValue, null, null, null, classes) }}
        </li>
    {% endfor %}
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="upcoming">
        <h2>{{ translate("txt-%s-events")|format(which|capitalize) }}</h2>

        {% include 'calendar/partial/list/calendar-community' with {'elements': paginator.getCurrentItems()} %}

        {% include 'calendar/partial/pagination-control' %}
    </div>
</div>
